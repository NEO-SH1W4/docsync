<section class="objectives-section mb-5">
    <h2 class="section-title">Objetivos Estratégicos</h2>
    
    <div class="objectives-grid">
        {% for obj in report.objectives %}
        <div class="objective-card card mb-4">
            <div class="card-header bg-light">
                <h3 class="card-title h5 mb-0">{{ obj.title }}</h3>
            </div>
            
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="objective-meta">
                            <span class="meta-label">Responsável</span>
                            <span class="meta-value">{{ obj.responsible }}</span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="objective-meta">
                            <span class="meta-label">Status</span>
                            <span class="status-badge {{ obj.status | status_class }}">
                                {{ obj.status | format_status }}
                            </span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="objective-meta">
                            <span class="meta-label">Progresso</span>
                            <div class="progress mt-2">
                                <div class="progress-bar" 
                                     role="progressbar" 
                                     style="width: {{ obj.progress }}%"
                                     aria-valuenow="{{ obj.progress }}" 
                                     aria-valuemin="0" 
                                     aria-valuemax="100">
                                    {{ obj.progress }}%
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <p class="objective-description">
                    {{ obj.description }}
                </p>
                
                {% if obj.milestones %}
                <div class="milestones mt-4">
                    <h4 class="h6">Marcos</h4>
                    <div class="timeline">
                        {% for milestone in obj.milestones %}
                        <div class="timeline-item">
                            <div class="timeline-badge {{ milestone.status | status_class }}">
                                <i class="fas fa-check"></i>
                            </div>
                            <div class="timeline-content">
                                <h5 class="h6">{{ milestone.title }}</h5>
                                <div class="timeline-meta">
                                    <span class="status-badge {{ milestone.status | status_class }}">
                                        {{ milestone.status | format_status }}
                                    </span>
                                    <span class="timeline-date ms-2">
                                        {{ milestone.date | format_date }}
                                    </span>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
        {% endfor %}
    </div>
</section>

