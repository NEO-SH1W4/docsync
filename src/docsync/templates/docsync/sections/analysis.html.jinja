<section class="analysis-section mb-5">
    <h2 class="section-title">Análise por Dimensão</h2>
    
    <div class="dimension-grid">
        {% for dimension, analysis in report.analysis.items() %}
        <div class="dimension-card card mb-4">
            <div class="card-header">
                <h3 class="h5 mb-0">{{ dimension }}</h3>
            </div>
            
            <div class="card-body">
                <div class="dimension-summary mb-4">
                    {{ analysis.summary }}
                </div>
                
                <div class="row">
                    <div class="col-md-4">
                        <div class="analysis-section">
                            <h4 class="h6 text-primary">Pontos-chave</h4>
                            <ul class="list-unstyled">
                                {% for point in analysis.key_points %}
                                <li class="mb-2">
                                    <i class="fas fa-star text-warning me-2"></i>
                                    {{ point }}
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="analysis-section">
                            <h4 class="h6 text-danger">Desafios</h4>
                            <ul class="list-unstyled">
                                {% for challenge in analysis.challenges %}
                                <li class="mb-2">
                                    <i class="fas fa-exclamation-triangle text-danger me-2"></i>
                                    {{ challenge }}
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="analysis-section">
                            <h4 class="h6 text-success">Oportunidades</h4>
                            <ul class="list-unstyled">
                                {% for opportunity in analysis.opportunities %}
                                <li class="mb-2">
                                    <i class="fas fa-lightbulb text-success me-2"></i>
                                    {{ opportunity }}
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</section>

