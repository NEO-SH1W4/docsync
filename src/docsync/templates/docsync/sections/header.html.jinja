<header class="report-header bg-light p-4 rounded-3 mb-4">
    <h1 class="display-4">{{ report.title | format_version }}</h1>
    <div class="report-meta d-flex justify-content-between align-items-center mt-3">
        <div>
            <span class="badge bg-primary me-2">{{ report.period }}</span>
            <span class="text-muted">Gerado em: {{ report.generated_at | format_date }}</span>
        </div>
        <div>
            <span class="badge bg-secondary">v{{ report.version | format_version }}</span>
        </div>
    </div>
    <div class="overview mt-4">
        <h2 class="h4">Vis√£o Geral</h2>
        <p class="lead">{{ report.overview }}</p>
    </div>
</header>

